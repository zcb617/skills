{
  "name": "高德地图",
  "description": "使用高德地图API进行位置服务查询，包括地点搜索、路径规划、天气查询等功能",
  "version": "1.0.0",
  "author": "OpenClaw Assistant",
  "skills": [
    {
      "id": "amap_place_search",
      "name": "高德地点搜索",
      "description": "根据关键词搜索地点信息",
      "category": "location",
      "tools": [
        {
          "name": "amap_keyword_search",
          "description": "根据关键词搜索地点",
          "parameters": {
            "type": "object",
            "properties": {
              "keywords": {
                "type": "string",
                "description": "搜索关键词"
              },
              "city": {
                "type": "string",
                "description": "查询城市，可选"
              }
            },
            "required": ["keywords"]
          }
        },
        {
          "name": "amap_nearby_search",
          "description": "搜索附近地点",
          "parameters": {
            "type": "object",
            "properties": {
              "keywords": {
                "type": "string",
                "description": "搜索关键词"
              },
              "location": {
                "type": "string",
                "description": "中心点坐标，格式：经度,纬度"
              },
              "radius": {
                "type": "integer",
                "description": "搜索半径，单位米，默认1000"
              }
            },
            "required": ["keywords", "location"]
          }
        }
      ]
    },
    {
      "id": "amap_navigation",
      "name": "高德导航",
