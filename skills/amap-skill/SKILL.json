          "parameters": {
            "type": "object",
            "properties": {
              "origin": {
                "type": "string",
                "description": "起点坐标，格式：经度,纬度"
              },
              "destination": {
                "type": "string",
                "description": "终点坐标，格式：经度,纬度"
              }
            },
            "required": ["origin", "destination"]
          }
        }
      ]
    },
    {
      "id": "amap_weather",
      "name": "高德天气",
      "description": "查询指定城市的天气信息",
      "category": "weather",
      "tools": [
        {
          "name": "amap_weather_query",
          "description": "查询城市天气",
          "parameters": {
            "type": "object",
            "properties": {
              "city": {
                "type": "string",
                "description": "城市名称或adcode"
              }
            },
            "required": ["city"]
          }
        }
      ]
    },
    {
      "id": "amap_geocoding",
